[Unit]
Description=P1 Monitor
Requires=docker.service
After=docker.service dbus.socket

[Service]
Type=simple
Restart=always
RestartSec=5s
WorkingDirectory=/home/pi/p1monitor-docker
ExecStartPre=-/usr/bin/docker-compose up -d
ExecStart=/usr/sbin/docker-compose up -d
ExecStop=-/usr/bin/docker-compose down

[Install]
WantedBy=multi-user.target
